---
title: "Blog"
---
<% wrap_layout :one_column_layout do %>
<section class="row" id="blog">
  <div class="col">
    <% blog.articles.each do |article| %>
      <div class="post-block mb-4">
        <h2><%= link_to article.title, article, class: 'text-decoration-none' %></h2>
        <h4><%= article.date.strftime('%b %e %Y') %></h4>
        <p><%= article.summary %></p>
        <%= link_to 'Read more', article %>
      </div>
    <% end %>
  </div>
</section>
<% end %>
