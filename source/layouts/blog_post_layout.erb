<% wrap_layout :layout do %>
  <% wrap_layout :one_column_layout do %>
    <section id="blog-post">
      <div class="row">
        <div class="col">
          <h1><%= current_article.title %></h1>
          <h4><%= current_article.date.strftime('%b %e %Y') %></h4>
          <div class="blog-content">
            <%= yield %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-6 mb-4">
          <% if current_article.article_previous %>
            <h4>Previous Post</h4>
            <%= link_to "&#8592; #{current_article.article_previous.title}", current_article.article_previous %> 
          <% end %>
        </div>
        <div class="col-sm-12 col-md-6 mb-4">
          <% if current_article.article_next %>
            <h4>Next Post</h4>
            <%= link_to "#{current_article.article_next.title} &#8594;", current_article.article_next %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h3>Comments</h3>
          <div id="replybox"></div>
      </div>
    </section>
    <%= partial "replybox" %>
  <% end %>
<% end %>
